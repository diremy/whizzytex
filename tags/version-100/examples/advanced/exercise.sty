                         {\@currentlabel}{\theQuestion}{\thepage}}%
           \global \edef \ans@lastlabel {\@currentlabel}%
        \fi
      \else
         \let \endanswer \endAnswerNow \let \ans@copytoend \AnswerNow
      \fi
   \fi \fi
   \ans@copytoend}
